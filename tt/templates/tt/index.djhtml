<!doctype html>
<html lang="en">
{% load staticfiles %}
    <head>
      <script
          src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
      <script src="{% static 'tt/js/jquery.knob.js' %}"></script>

      <script>
        $(function() {
        $(".dial").knob({

        'width':"150",
        'fgColor':"#333",
        'skin':"tron",
        'thickness':".1",
        'angleOffset':-100,
        'displayPrevious':true,
        });

        $({value: 0}).animate({value: {{ progress}} * 100}, {
        duration: 1000,
        easing:'swing',
        step: function() 
        {
        $('.dial').val(Math.ceil(this.value)).trigger('change');
        }
})
        });
      </script>

        <meta charset="UTF-8"/>
        <title>Document</title>
        <style type="text/css">
          .moduleTitle {
              background-color: #b1cfe7;
              margin-top:2px;
              padding: 5px;
          }
          .moduleTitle:hover {
              background-color: #599DB3;
              cursor: pointer;
              
          }
          a {
             display:block;
          }
          #sidebar {
             float:left;
             width: 100px;
          }
          div#studentInfo {
             float:right;
             border: 1px solid #333;
             padding: 10px;
                  
          }
          div#main{
              margin: 0 150px;
              padding: 100px;
          }
          
        </style>
    </head>

    <body>
      <div id="sidebar">
        {% for module in module_list %}
        <div class="moduleTitle">
          <h5>{{ module.title }}</h5>
          </div>
          <div class="moduleDetails">
            
          {% for activity in module.aktivnost_set.all %}
              <a class="moduleActivity" href="{% url 'tt:activity' activity.url %}">{{activity.title}}</a>
          {% endfor %}

          </div>

        </div>
        {% endfor %}

      </div>
      <div id="studentInfo">
          {% if user.is_authenticated %}
             <p>Welcome, {{ user.name }} {{ user.username }}. Thanks
             for logging in.</p>
             <p> You have completed: </p>
             {% for act in completed_activity_list %} 
             <p>{{act}} </p>
             <input type="text" name="" value="" class="dial"
                     data-min="0" data-max="100"/>
             {% endfor %}
             
          {% else %}
             <p>Welcome, new user. Please log in.</p>
          {% endif %}
        </div>
      <div id="main">
        {% for update in updates %}
        <p>{{update.content}}</p>
        {% endfor %}
      </div>
    </body>
</html>
