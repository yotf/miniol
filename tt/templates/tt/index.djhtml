<!doctype html>
<html lang="en">
{% load staticfiles %}
    <head>
      <script
          src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
      <script src="{% static 'tt/js/jquery.knob.js' %}"></script>

      <script>
        $(function() {
        $(".dial").knob({

        'width':"150",
        'fgColor':"#333",
        'skin':"tron",
        'thickness':".1",
        'angleOffset':-100,
        'displayPrevious':true,
        'readOnly':true,
        });

        $({value: 0}).animate({value: {{ progress}} * 100}, {
        duration: 1000,
        easing:'swing',
        step: function() 
        {
        $('.dial').val(Math.ceil(this.value)).trigger('change');
        }
})
        });
      </script>

        <meta charset="UTF-8"/>
        <title>Document</title>
        <style type="text/css">
          body {
              background: url({% static 'tt/images/combine_images.jpg' %});
          }
          .moduleTitle {
              background-color: #b1cfe7;
              margin-top:2px;
              padding: 5px;
          }
          .moduleTitle:hover {
              background-color: #599DB3;
              cursor: pointer;
              
          }
          a {
             display:block;
          }
          #sidebar {
             float:left;
             width: 150px;
             background-color: white;
          }
          div#studentInfo {
             float:right;
             border: 1px solid #333;
             padding: 10px;
             background-color: white;
                  
          }
          div#main{
              margin: 0 250px;
              height: 200px;
              padding : 30px;
              background-color:white;
          }

          .comment-container {
              border-bottom: 1px solid white;
              border-top: 1px solid #f5f7fa;
              background-color: #edeff2;
              padding: 6px;
              font-family: 'Open Sans','lucida grande',tahoma,verdana,arial,sans-serif;
              clear:both;
          }
          .comment-placeholder {
          color: #888;
          font-size: 12px;
          padding: 4px;
          height: 30px;
          margin: 0;
          width: 100%;
          -webkit-box-sizing: border-box;
          -moz-box-sizing: border-box;
          box-sizing: border-box;
          }
          input[type=text],input[type=submit]{
             display:block;
          
          }
          
        </style>
    </head>

    <body>
      <div id="sidebar">
        {% for module in module_list %}
        <div class="moduleTitle">
          <h5>{{ module.title }}</h5>
          </div>
          <div class="moduleDetails">
            
          {% for activity in module.aktivnost_set.all %}
              <a class="moduleActivity" href="{% url 'tt:activity' activity.url %}">{{activity.title}}</a>
          {% endfor %}

          </div>

        </div>
        {% endfor %}

      </div>
      <div id="studentInfo">
          {% if user.is_authenticated %}
             <p>Welcome, {{ user.name }} {{ user.username }}. Thanks
             for logging in.</p>
             {% if completed_activity_list %}
             <p> You have completed: </p>
             
             {% for act in completed_activity_list %} 
             <p>{{act}} </p>
             <input type="text" name="" value="" class="dial"
                     data-min="0" data-max="100"/>
             {% endfor %}
             {% else %}
             <p>You haven't completed any activity!</p>
             {%endif %}
             
             <form action="{% url 'tt:user_logout' %}" method="post">
               {% csrf_token %}
               <input type="submit" name="" value="logout"/>
             </form>
             
          {% else %}
             <p>Welcome, new user. Please log in.</p>
             <form action="{% url 'tt:user_login' %}" method="post">
               {% csrf_token %}
               <input type="text" name="username" value=""/>
               <input type="password" name="password" value=""/>
               <input type="submit" name="" value="login"/>

             </form>

          {% endif %}
        </div>
      <div id="main">
        {% for update in updates %}
        <p>{{update.content}}</p>
        {% endfor %}
      <div id="communityFooter">
        <div id="community-heading-container">
          <a  name="comments"></a>
          <div class="comments">
            <div class="comment-container">
              <form action="{% url 'tt:comments_add' %}"
                    method="post">
                {% csrf_token %}
              <div class="comment-placeholder-container">
                <textarea class="comment-placeholder" name="comment">Write a comment...</textarea>
              </div>
              <input type="submit" name="submit-button" value="post"/>
              </form>
            </div>
          </div>
        </div>
        <div class="child-comments">
          {% for comment in comments %}
          <div class="comment-container">
            <p>{{comment.user}}</p>
            <p>{{comment.content}}</p>
          </div>
          {% endfor %}

        </div>
          <div id="newComment">
            </textarea>
            </div>
           
      </div>
      </div>
    </body>
</html>
